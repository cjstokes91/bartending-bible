<%- include("../partials/header") %>
<a id="newDrink" href="/drinks/new">Add New Drink</a>
<h1><%= title %></h1>
<ul>
<section class="drinkBox"
  <% drinks.forEach(d => { %>
     <% if(user) { %>
          <% if (user.name === d.user) { %>
         <form action="/drinks/<%= d._id %>?_method=DELETE" class="delete-form" method="POST">
          <%  } else { %>
            <% } %>
            <div id="userName">
              <li id="comments"> <%= d.name %> </li>
            </div>
            <li id="drinksName">Added By: <%= d.user %></li>
          </div>
          <li><%= d.ref %></li>
          <label>COMMENTS</label>
          <% if(d.comments.length){ %> 
            <% d.comments.forEach(c => { %>
              <li><%= c.content %></li>
              <%  }) %>
              <% } %>
              <section>
                <li><a href="/drinks/<%= d._id %>">Whats in it??</a> </li>
                <form id="add-comment-form" method="POST" action="/drinks/<%= d._id %>/comments">
                  <textarea name="content"></textarea>
                  <input type="submit" value="Add Comment">
                </form>
              </section>
              <button id="delete" type="submit">Delete Drink</button>
             </form>
</section >
        <% } %>
    <% }) %>
</ul>
<%- include("../partials/footer") %>