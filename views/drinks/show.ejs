<%- include('../partials/header') %>
<section id="show-page">
    <div>Name</div>
    <div><%= drink.name %></div>
    <div>Alcohol</div>
    <div><%= drink.alcohol %></div>
    <div>Mix</div>
    <div><%= drink.mix %></div>
    <div>Instructions</div>
    <div><%= drink.instructions %></div>
</section>



<form id="edit-drink-form" action="/drinks/:id/update/<%= drink._id %>" method="POST">

    <label>Name</label>
    <input type="text" name="name" value="<%= drink.name %>">
    <label>Alcohol</label>
    <input type="text" name="alcohol" value="<%= drink.alcohol %>">
    <label>Mix</label>
    <input type="text" name="mix" value="<%= drink.mix %>">
    <label>Instructions</label>
    <input type="text" name="instructions" value="<%= drink.instructions %>">
    <input type="submit" value="Save New Drink">
  </form>
<%- include('../partials/footer') %>