<%- include('../partials/header') %>
<section id="show-page">
  <h1>YOUR DRINK</h1>
  <ul>
    <div><strong>NAME</strong></div>
    <div><%= drink.name %></div>
    <div><strong>ALCOHOL</strong></div>
    <div><%= drink.alcohol %></div>
    <div><strong>MIX</strong></div>
    <div><%= drink.mix %></div>
    <div><strong>INSTRUCTIONS</strong></div>
    <div><%= drink.instructions %></div>
  </ul>
</section>

<form id="edit-drink-form" action="/drinks/<%= drink._id %>/update/" method="POST">
    <label>Name</label>
    <input type="text" name="name" value="<%= drink.name %>">
    <label>Alcohol</label>
    <input type="text" name="alcohol" value="<%= drink.alcohol %>">
    <label>Mix</label>
    <input type="text" name="mix" value="<%= drink.mix %>">
    <label>Instructions</label>
    <input type="text" name="instructions" value="<%= drink.instructions %>">
    <input type="submit" value="Save New Drink">
  </form>

  <form id="comment-drink-form" action="/drinks/<%= drink._id %>/comments/" method ="POST">
    <label>Comments</label>
    <textarea type="text" name="content" ></textarea>
    <input type="submit" value="Add Comment"
  </form>
<%- include('../partials/footer') %>