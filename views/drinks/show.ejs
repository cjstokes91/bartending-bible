<%- include('../partials/header') %>
<a id="home" href="/drinks/">HOME</a>
  
<section id="show-page">
  <h1>YOUR DRINK</h1>
  <ul id="show">  
    <div><strong>NAME:<%= drink.name %></strong></div>
    <div><strong>ALCOHOL:<%= drink.alcohol %></strong></div>
    <div><strong>MIX:<%= drink.mix %></strong></div>
    <div><strong>INSTRUCTIONS:<%= drink.instructions %></strong></div>
  </ul>
</section>
<% if(user.email == drink.user) { %>

  <form id="edit-drink-form" action="/drinks/<%= drink._id %>/update/" method="POST">
  <label>Name</label>
  <input type="text" name="name" value="<%= drink.name %>">
  <label>Alcohol</label>
  <input type="text" name="alcohol" value="<%= drink.alcohol %>">
  <label>Mix</label>
  <input type="text" name="mix" value="<%= drink.mix %>">
  <label>Instructions</label>
  <input type="text" name="instructions" value="<%= drink.instructions %>">
  <input type="submit" value="Save New Drink">
</form> 
<% } %>
<%- include('../partials/footer') %>